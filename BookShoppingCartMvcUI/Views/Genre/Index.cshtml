@model IEnumerable<Genre>
@{
    Layout = "_AdminLayout";
}

<h2>Thể loại</h2>

<a asp-action="AddGenre" asp-controller="Genre" class="btn btn-primary">Thêm</a>

<table class="table table-striped my-2">
    <tr>
        <th>Thể loại</th>
        <th>Hành động</th>
    </tr>

    @foreach(var genre in Model)
    {
        <tr>
            <td>@genre.GenreName</td>
            <td>
                <a asp-action="UpdateGenre" asp-controller="Genre" asp-route-id="@genre.Id" class="btn btn-success">Sửa</a>
                <a asp-action="DeleteGenre" asp-controller="Genre" asp-route-id="@genre.Id" class="btn btn-danger" onclick="return window.confirm('Are you sure?')">Xoá</a>
            </td>
        </tr>
    }
</table>

